<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rll_item_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/img_user_item_chat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/loaddingimage"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lnl_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img_item_chat"
            android:layout_toRightOf="@id/img_item_chat"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_username_item_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khoi Nguyen"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_description_item_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shared a month ago"></TextView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_total_message_not_seen_item_chat"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@color/red"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tv_total_message_not_seen_item_chat"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@color/red"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold">

            </TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>