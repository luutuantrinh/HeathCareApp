<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frames_item_search_friend"
    android:gravity="center"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/img_avatar_item_search_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/loaddingimage"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_firstName_item_search_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Nguyen"
        android:paddingRight="4dp"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/txt_lastName_item_search_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khoi"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>