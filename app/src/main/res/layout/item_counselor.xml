<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_item_counselor"
                android:layout_width="60dp"
                android:src="@drawable/loaddingimage"
                android:layout_height="60dp">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_fullName_item_counselor"
                    android:layout_width="wrap_content"
                    android:text="Nguyen van Khoi"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                </TextView>

                <RatingBar
                    android:id="@+id/ratting_item_counselor"
                    android:layout_gravity="center_vertical"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:saveEnabled="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.1"
                    android:layout_height="wrap_content">

                </RatingBar>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_position_item_counselor"
                android:layout_width="match_parent"
                android:text="#doctor"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_email_item_counselor"
                android:layout_width="match_parent"
                android:text="khoinguyenvk9@gmail.com"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_phone_item_counselor"
                android:layout_width="match_parent"
                android:text="0987257223"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>