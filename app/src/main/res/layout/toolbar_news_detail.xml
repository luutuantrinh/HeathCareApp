<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp">

        <ImageButton
            android:id="@+id/icon_backspace_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_keyboard_backspace">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:text="10 thuc pham tot cho cow the ...."
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icon_more_news_detail"
            android:layout_toEndOf="@id/icon_backspace_news_detail"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_backspace_news_detail"
            android:layout_toLeftOf="@id/icon_more_news_detail">

        </TextView>
        <ImageButton
            android:id="@+id/icon_more_news_detail"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_alignParentRight="true">

        </ImageButton>
    </RelativeLayout>

</RelativeLayout>