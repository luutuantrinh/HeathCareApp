<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="13dp"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/icon_createContent_newFeed"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:src="@drawable/ic_add"></ImageButton>
        <ImageButton
            android:id="@+id/icon_empty_newFeed"
            android:layout_toEndOf="@id/icon_createContent_newFeed"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_space_bar"
            android:layout_toRightOf="@id/icon_createContent_newFeed"></ImageButton>

        <TextView
            android:id="@+id/titleNewFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
           android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/black"
           android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icon_addFriend_newFeed"
            android:layout_toLeftOf="@id/icon_addFriend_newFeed"
            android:layout_toEndOf="@id/icon_empty_newFeed"
            android:layout_toRightOf="@id/icon_empty_newFeed"
            android:gravity="center"
            android:text="NEW FEED">

        </TextView>

        <ImageButton
            android:id="@+id/icon_addFriend_newFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingRight="15dp"
            android:layout_toLeftOf="@id/icon_notification_newFeed"
            android:src="@drawable/ic_group_add"></ImageButton>

        <ImageButton
            android:id="@+id/icon_notification_newFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_notifications"></ImageButton>
    </RelativeLayout>

</RelativeLayout>