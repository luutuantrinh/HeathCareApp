<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_border_toolbar">

    <RelativeLayout style="@style/rl_toolbar_basic">

        <ImageButton
            android:id="@+id/icon_backspace_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_keyboard_backspace">

        </ImageButton>

        <TextView
            style="@style/title_toolbar"
            android:layout_toStartOf="@id/icon_empty_follow"
            android:layout_toLeftOf="@id/icon_empty_follow"
            android:layout_toEndOf="@id/icon_backspace_follow"
            android:layout_toRightOf="@id/icon_backspace_follow"
            android:text="FOLLOW">

        </TextView>

        <ImageButton
            android:id="@+id/icon_empty_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@drawable/ic_space_bar">

        </ImageButton>
    </RelativeLayout>

</RelativeLayout>