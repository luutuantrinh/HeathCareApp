<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_border_toolbar">

    <RelativeLayout
        style="@style/rl_toolbar_basic">

        <ImageButton
            android:id="@+id/icon_backspace_detail_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_keyboard_backspace">
        </ImageButton>

        <TextView
            android:id="@+id/title_toolbar_detail_post"
            android:layout_width="wrap_content"
            style="@style/title_toolbar"
            android:text="DETAILS"
            android:layout_toStartOf="@id/icon_more_detail_post"
            android:layout_toEndOf="@id/icon_backspace_detail_post"
            android:layout_toRightOf="@id/icon_backspace_detail_post"
            android:layout_toLeftOf="@id/icon_more_detail_post">

        </TextView>
        <ImageButton
            android:id="@+id/icon_more_detail_post"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_alignParentRight="true">

        </ImageButton>
    </RelativeLayout>

</RelativeLayout>