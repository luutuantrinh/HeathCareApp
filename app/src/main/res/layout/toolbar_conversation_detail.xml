<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/style_border_toolbar">

    <RelativeLayout android:layout_centerVertical="true" style="@style/rl_toolbar_basic">

        <ImageButton
            android:id="@+id/icon_backspace_conversation_detail"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_back_ios"></ImageButton>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_conversation_detail"
            android:layout_toEndOf="@id/icon_backspace_conversation_detail"
            android:layout_toRightOf="@id/icon_backspace_conversation_detail"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imgRows_conversation_detail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/hansara"></ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/title_toolbar_conversation_detail"
            style="@style/title_toolbar"
            android:layout_width="wrap_content"

            android:layout_toEndOf="@id/card_image_conversation_detail"
            android:layout_toRightOf="@id/card_image_conversation_detail"
            android:text="Khoi Nguyen">

        </TextView>

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/icon_more_conversation_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@drawable/ic_more">

        </ImageButton>
    </RelativeLayout>

</RelativeLayout>