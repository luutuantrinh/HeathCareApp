<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/img_item_cmt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/hansara"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username_item_cmt"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoi Nguyen">
                </TextView>

                <TextView
                    android:id="@+id/createAt_item_cmt"
                    android:paddingLeft="7dp"
                    android:layout_width="wrap_content"
                    android:text="2 days ago"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <TextView
                android:id="@+id/content_item_cmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is comment"></TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>