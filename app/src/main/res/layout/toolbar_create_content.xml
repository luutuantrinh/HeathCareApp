<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_cancel_createContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Cancel"
            android:textColor="@color/black"></Button>

        <TextView
            android:id="@+id/titleNewFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_marginVertical="10dp"
            android:layout_toStartOf="@id/btn_publish_createContent"
            android:layout_toLeftOf="@id/btn_publish_createContent"
            android:layout_toEndOf="@id/btn_cancel_createContent"
            android:layout_toRightOf="@id/btn_cancel_createContent"
            android:gravity="center"
            android:text="NEW POST"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold">

        </TextView>

        <Button
            android:id="@+id/btn_publish_createContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:text="Publish"
            android:textColor="@color/black"></Button>
    </RelativeLayout>


</RelativeLayout>