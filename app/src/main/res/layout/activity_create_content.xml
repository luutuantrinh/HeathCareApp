<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CreateContentActivity">
    <include android:id="@+id/include_toolbar_create_content" layout="@layout/toolbar_create_content"></include>
    <LinearLayout
        android:id="@+id/lnl_info_username"
        android:layout_below="@id/include_toolbar_create_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imgRows_ct"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_person"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/username_item_cmt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoi Nguyen">
        </TextView>
    </LinearLayout>

    <EditText
        android:padding="10dp"
        android:id="@+id/txt_content_create"
        android:layout_below="@id/lnl_info_username"
        android:layout_width="match_parent"
        android:hint="What are you up to?"
        android:background="@color/white"
        android:layout_height="wrap_content">

    </EditText>




</RelativeLayout>