<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="20dp"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_item_news"
            android:layout_width="120dp"
            android:src="@drawable/loaddingimage"
            android:layout_height="120dp">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="7dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_item_news"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:text="10 Loai thuc pham chuc nang"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tv_author_item_news"
                android:layout_width="match_parent"
                android:text="#Khoi Nguyen"
                android:textSize="15dp"
                android:textStyle="italic"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tv_content_item_news"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:text="Rau bina, rau xanh. Để cải thiện thị lực, phải thường xuyên ăn rau bina cùng với các loại rau xanh khác..."
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>